extends layout

block content
  h1= title
  p Please enter your login data

  form(method='POST')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text', placeholder='someone@example.com' name='username' )
    div.form-group
      label(for='password') Password:
      input#password.form-control(type='password', name='password' )
    button.btn.btn-primary(type='submit') Submit
